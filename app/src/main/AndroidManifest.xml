<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.BCIVoyager">

    <uses-permission android:name="android.permission.INTERNET" />

    <application android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:theme="@style/AppTheme"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:immersive="true">

        <activity android:name="com.example.BCIVoyager.Activity2Connexion"
            android:label="Connexion"
            android:icon="@mipmap/ic_launcher"
            android:theme="@style/AppTheme"
            android:screenOrientation="landscape">
        </activity>

        <activity android:name="com.example.BCIVoyager.Activity3Calibration"
            android:screenOrientation="landscape">
        </activity>

        <activity android:name="com.example.BCIVoyager.Activity4LaunchXP"
            android:screenOrientation="landscape">
        </activity>

        <activity android:name="com.example.BCIVoyager.Activity5Images"
            android:screenOrientation="landscape">
        </activity>

        <activity android:name="com.example.BCIVoyager.Activity6Results"
            android:screenOrientation="landscape">
        </activity>


        <activity
            android:name=".Activity1Launchscreen"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme"
            android:immersive="true">
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.LAUNCHER" />
                <data
                    android:host="coglab.fr"
                    android:scheme="https" />
            </intent-filter>
        </activity>

        <activity android:name="com.example.BCIVoyager.ActivitySettings"
            android:label="Settings"
            android:icon="@mipmap/ic_launcher"
            android:theme="@style/AppTheme"
            android:screenOrientation="landscape">
        </activity>
    </application>


</manifest>