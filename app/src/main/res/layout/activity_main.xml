<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Voyager.Launchscreen"
    android:background="#000000">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/green_coglab"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="111dp">

        <TextView
            android:id="@+id/welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/welcomeMsg"
            android:textSize="40sp"
            android:gravity="center"
            android:textColor="@color/white" />


        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:srcCompat="@drawable/coglab_sticker" />

        <Button
            android:id="@+id/v_start"
            android:layout_width="240dp"
            android:layout_height="70dp"
            android:text="@string/v_startVoyager"
            android:background="@color/light_blue"
            android:elevation="10dp"
            android:textColor="@color/white"
            android:textSize="22sp"/>

        <Button
            android:id="@+id/demo"
            android:layout_width="240dp"
            android:layout_height="70dp"
            android:text="@string/v_demo"
            android:background="@color/light_blue"
            android:elevation="20dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:contextClickable="@tools:sample/full_names"
            android:onClick="" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:hint="@string/v_ip"
            android:inputType="number"
            android:lines="5" />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="15dp"
            android:clickable="true"
            app:srcCompat="@mipmap/ic_launcher" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>