<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:screenOrientation="landscape"
    android:background="@color/black_dark"
    tools:context="com.example.BCIVoyager.Activity1Launchscreen"
    android:id="@+id/start_xp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="40dip"
        android:text="@string/t_launch"
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dip"
        android:text="@string/look"
        android:textSize="50sp"
        android:gravity="center"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="60dip"
        android:gravity="center">

        <ImageView
            android:id="@+id/clickleft"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            app:srcCompat="@drawable/logo_brain" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="@string/choice"
            android:textSize="50sp"
            android:gravity="center"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/clickright"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            app:srcCompat="@drawable/logo_brain" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dip"
            android:text="@string/ready"
            android:textSize="30sp"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/launchXP"
            android:text="@string/demarrer"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:padding="20dip"
            android:background="@color/light_blue"
            android:textColor="@color/white"
            android:textSize="22sp"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dip">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:clickable="true"
            app:srcCompat="@drawable/coglab_transparent"
            android:background="@color/green_strong_coglab"
            android:layout_margin="15dip"/>

    </RelativeLayout>
</LinearLayout>