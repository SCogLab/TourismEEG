<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:screenOrientation="landscape"
    android:background="@color/black_dark"
    tools:context="com.example.BCIVoyager.Activity1Launchscreen"
    android:id="@+id/start_xp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:src="@drawable/choose_matrix" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="30dip"
        android:text="@string/t_launch"
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="@string/look"
        android:textSize="50sp"
        android:gravity="center"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:layout_margin="0dip"
        android:gravity="center">

        <!-- Image left
        <ImageView
            android:id="@+id/clickleft"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            app:srcCompat="" /> -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dip"
            android:text="@string/choice"
            android:textSize="45sp"
            android:gravity="center"
            android:textColor="@color/white" />

        <!-- Image right
        <ImageView
            android:id="@+id/clickright"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            app:srcCompat="" /> -->
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dip"
            android:text="@string/ready"
            android:textSize="30sp"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/launchXP"
            android:text="@string/btn_slowdemo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dip"
            android:background="@color/light_blue"
            android:textColor="@color/white"
            android:textSize="22sp"/>

        <Button
            android:id="@+id/launchXPFast"
            android:text="@string/btn_fastdemo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dip"
            android:layout_marginLeft="20dip"
            android:background="@color/light_blue"
            android:textColor="@color/white"
            android:textSize="22sp"/>

        <Button
            android:id="@+id/launchXPUFast"
            android:text="@string/btn_ultrafastdemo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dip"
            android:layout_marginLeft="20dip"
            android:background="@color/light_blue"
            android:textColor="@color/white"
            android:textSize="22sp"/>
    </LinearLayout>

    </LinearLayout>
</FrameLayout>